{{#if isSecondary}}
 <ul class="nav" role="menu">
    {{!-- secondary navigation --}}
        {{#foreach navigation}}
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}"  role="menuitem"><a href="{{url absolute="true"}}">{{label}}</a></li> 
        {{/foreach}}
		</ul>
{{else}}
    {{!-- primary navigation --}}
    <ul class="nav" role="menu">
        {{#foreach navigation}}
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}" role="menuitem"><a href="{{url absolute="true"}}">{{label}}</a></li>
        {{/foreach}}
    </ul>
{{/if}}